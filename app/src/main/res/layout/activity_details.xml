<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:src="@drawable/ganteng"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:id="@+id/nama"
        android:layout_toRightOf="@id/image"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:textStyle="bold"
        android:layout_marginTop="25sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squidward Quincy Tentacles"
        android:id="@+id/name"
        android:layout_toRightOf="@+id/image"
        android:textColor="#000"
        android:layout_below="@id/nama"
        android:layout_marginLeft="10sp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lahir :"
        android:id="@+id/lahir"
        android:layout_toRightOf="@id/image"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9 Oktober 1977"
        android:id="@+id/birth"
        android:layout_toRightOf="@+id/image"
        android:textColor="#000"
        android:layout_below="@id/lahir"
        android:layout_marginLeft="10sp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pekerjaan :"
        android:id="@+id/pekerjaan"
        android:layout_toRightOf="@id/image"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:textStyle="bold"
        android:layout_below="@+id/birth"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kasir di Krusty Krab"
        android:id="@+id/job"
        android:layout_toRightOf="@+id/image"
        android:textColor="#000"
        android:layout_below="@id/pekerjaan"
        android:layout_marginLeft="10sp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang"
        android:id="@+id/tentang"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/image"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squidward Tentacles adalah seekor gurita yang bertetangga dengan SpongeBob dan Patrick, ia kasir yang sering membuat ulah, dan membuat repot semua orang di sekitarnya. Ia tidak senang dengan kedua tetangganya karena dianggap sering mengganggunya. Pekerjaan sehari-hari Squidward adalah menjadi kasir di rumah makan Krusty Krab. Tergolong pemalas, suka bermain klarinet walaupun musik yang dilagukannya jelek. Ia sendiri menganggap dirinya seorang seniman hebat dan orang yang pintar. Memiliki seorang saingan sejak SMA bernama Squilliam Fancyson."
        android:id="@+id/about"
        android:textColor="#000"
        android:layout_below="@id/tentang"
        android:layout_marginLeft="15sp"
        android:textSize="15sp"
        android:layout_marginRight="15sp"
        />

</RelativeLayout>